{
  "name": "pet-scorp",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/taraswww777/scorp",
  "workspaces": ["be", "fe"],
  "scripts": {
    "build": "npm run fe:build && npm run be:build",
    "be:dev": "npm -w scorp-be run dev",
    "be:build": "npm -w scorp-be run build",
    "be:start": "npm -w scorp-be run start:tsx",
    "fe:dev": "npm -w scorp-fe run dev",
    "fe:build": "npm -w scorp-fe run build",
    "fe:start": "npm -w scorp-fe run start",
    "fe:lint": "npm -w scorp-fe run lint",
    "docker:start": "docker-compose up",
    "docker:build": "docker build -t scorp ."
  },
  "dependencies": {
    "fastify": "5.2.0",
    "next": "14.2.22",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tsx": "4.19.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.17.0",
    "@faker-js/faker": "9.0.3",
    "@types/lodash": "4.17.13",
    "@types/node": "20.16.10",
    "@types/react": "18.3.10",
    "@types/react-dom": "18.3.0",
    "@types/tailwindcss": "3.1.0",
    "classnames": "2.5.1",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.3",
    "eslint-plugin-react": "7.37.3",
    "fastify-cli": "7.3.0",
    "globals": "15.14.0",
    "lodash": "4.17.21",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.13",
    "ts-node": "10.9.2",
    "typescript": "5.6.2",
    "typescript-eslint": "8.19.0"
  },
  "engines": {
    "node": "22"
  }
}
